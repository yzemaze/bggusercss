						c linkSelected !important // c-i!
				.emoji-mart-anchor:hover
						buttonHoverStyle()
		/* dice rolls */
		.roll-modal-body .text-muted
				c textMuted !important // c-i!
				&:hover
						c text !important // c-i!
		/* popover */
		.popover, .popover-body
				bg menu
				&, button.close
